# Fastfile for HomeInventory

default_platform(:ios)

platform :ios do
  desc "Generate screenshots"
  lane :screenshots do
    capture_screenshots(
      project: "HomeInventoryModular.xcodeproj",
      scheme: "HomeInventoryModular"
    )
  end

  desc "Frame screenshots"
  lane :frame do
    frame_screenshots(
      path: "./fastlane/screenshots"
    )
  end

  desc "Upload screenshots to App Store Connect"
  lane :upload_screenshots do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_metadata: true,
      skip_app_version_update: true,
      force: true, # Skip HTML report verification
      overwrite_screenshots: true
    )
  end

  desc "Generate and frame screenshots"
  lane :screenshots_all do
    screenshots
    frame
  end

  desc "Build app locally"
  lane :build_local do
    # Ensure we're on a clean git status
    ensure_git_status_clean
    
    # Set build number to 2 (since Build 1 exists)
    increment_build_number(
      build_number: 2,
      xcodeproj: "HomeInventoryModular.xcodeproj"
    )
    
    # Build the app
    build_app(
      scheme: "HomeInventoryModular",
      export_method: "app-store",
      skip_codesigning: false,
      export_options: {
        compileBitcode: false,
        uploadBitcode: false,
        uploadSymbols: true
      }
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    # Ensure we're on a clean git status
    ensure_git_status_clean
    
    # Increment build number
    increment_build_number(
      build_number: 2,
      xcodeproj: "HomeInventoryModular.xcodeproj"
    )
    
    # Build the app
    build_app(
      scheme: "HomeInventoryModular",
      export_method: "app-store"
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: "Version 1.0.0 - Complete rebuild with modular architecture\n\n• All new codebase with improved performance\n• Enhanced UI with SwiftUI\n• Better organization features\n• Improved barcode scanning\n• iCloud sync support"
    )
    
    # Commit the version bump
    commit_version_bump(
      message: "Bump build number for TestFlight release",
      xcodeproj: "HomeInventoryModular.xcodeproj"
    )
    
    # Push to git
    push_to_git_remote
  end

  desc "Release to App Store"
  lane :release do
    # Ensure we're on a clean git status
    ensure_git_status_clean
    
    # Build the app
    build_app(
      scheme: "HomeInventoryModular",
      export_method: "app-store"
    )
    
    # Upload to App Store
    upload_to_app_store(
      force: true,
      submit_for_review: false,
      automatic_release: false,
      skip_screenshots: false,
      skip_metadata: false
    )
  end
end